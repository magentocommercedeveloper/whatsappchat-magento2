<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="ssquare" translate="label" sortOrder="10">
            <label>Ssquare</label>
        </tab>
        <section id="whatsapp_chat" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>WhatsApp Chat Configuration</label>
            <tab>ssquare</tab>
            <resource>Ssquare_Whatsapp::config</resource>
            <group id="settings" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Settings</label>
                <field id="receiver_number" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Receiver Number</label>
                    <comment>Enter the WhatsApp receiver number (include country code without '+' or '00').</comment>
                    <validate>required-entry</validate>
                </field>
                <field id="receiver_message" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Receiver Number</label>
                    <comment>User will send this as a first message to the receiver number</comment>
                    <validate>required-entry</validate>
                </field>
            </group>
        </section>
    </system>
</config>
